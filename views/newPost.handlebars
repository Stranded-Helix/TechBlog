<div class="card">
    <div class="card-body bg-primary">
        <h5 class="col-sm-2 m-1 text-white">
            Create New Post
        </h5>
    </div>
    <div class="card-body">
        <form class="post-form">
            <div class="mb-3">
                <label for="new-post-title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="post-title" placeholder="What's on your mind?">
                </div>
            </div>
            <div class="mb-3">
                <label for="post-content" class="col-sm-2 col-form-label">Content</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" id="post-body"></textarea>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Post</button>
            </div>
        </form>
    </div>
</div>



<script src="/js/newPost.js"></script>